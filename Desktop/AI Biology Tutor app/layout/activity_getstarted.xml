<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".getstarted"
    android:background="#FFFFFF">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AI Biology Tutor App"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- App Logo -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bio"
        android:contentDescription="App Logo"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/devtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Devs"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Developer Layout -->
    <LinearLayout
        android:id="@+id/devLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/devtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="54dp"
        android:weightSum="3">

        <!-- Developer 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/developer"
                android:scaleType="centerCrop"
                android:theme="@style/roundedImageView"
                app:strokeColor="@color/teal_200"
                app:strokeWidth="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semunyu Aloyzius"
                android:textSize="12sp"
                android:textColor="#000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Developer 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/aye"
                android:layout_marginHorizontal="4dp"
                android:theme="@style/roundedImageView"
                app:strokeColor="@color/teal_200"
                app:strokeWidth="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ayesiga Brian"
                android:textSize="12sp"
                android:textColor="#000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Developer 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ant"
                android:layout_marginHorizontal="4dp"
                android:theme="@style/roundedImageView"
                app:strokeColor="@color/teal_200"
                app:strokeWidth="2dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wagutwe Anthony"
                android:textSize="12sp"
                android:textColor="#000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Get Started Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGetStarted"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Get Started"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginHorizontal="32dp"
        android:backgroundTint="@color/teal_200"
        android:background="@drawable/edittxtbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
