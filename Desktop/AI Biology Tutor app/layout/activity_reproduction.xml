<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".reproduction">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:gravity="center"
        app:titleMarginTop="20dp"
        android:paddingTop="20dp"
        app:titleMarginStart="20dp"
        android:paddingBottom="10dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:navigationContentDescription="Back"
        app:title="Reproduction"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="2dp">
            <!-- Body Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Theory Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_theory"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:id="@+id/card_theory_img"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            >
                            <ImageView
                                android:id="@+id/theory_img_practicals"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/theory"
                                android:scaleType="centerCrop"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_theory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Theory"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@+id/card_theory_img"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp" />

                        <Button
                            android:id="@+id/btn_theory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learn More"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Practicals Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_practicals"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:id="@+id/card_img"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            >
                            <ImageView
                                android:id="@+id/img_practicals"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/practicals"
                                android:scaleType="centerCrop"
                                />
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/tv_practicals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Practicals"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@+id/card_img"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp" />

                        <Button
                            android:id="@+id/btn_practicals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tests Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_tests"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:id="@+id/test_card_img"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            >
                            <ImageView
                                android:id="@+id/test_img_practicals"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/tests"
                                android:scaleType="centerCrop"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_tests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tests"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_toEndOf="@+id/test_card_img"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp" />

                        <Button
                            android:id="@+id/btn_tests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Take Test"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Online Textbooks Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_textbooks"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="8dp"
                            android:id="@+id/textbooks_card_img"
                            app:cardElevation="4dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            >
                            <ImageView
                                android:id="@+id/textbook_img_practicals"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/online"
                                android:scaleType="centerCrop"
                                />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tv_textbooks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="16dp"
                            android:layout_toEndOf="@+id/textbooks_card_img"
                            android:text=" Online \n Textbooks"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_textbooks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse"
                            android:textColor="@android:color/white"
                            android:backgroundTint="@android:color/holo_blue_dark"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
