<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#03A9F4"
        app:titleMarginTop="10dp"
        android:paddingBottom="10dp"
        app:titleMarginStart="60dp"
        app:title="TOPICS AND PROGRESS"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            >
            <!-- Repeat this structure for each topic -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:id="@+id/img_respiration"
                            android:layout_width="100dp"
                            android:scaleType="centerCrop"
                            android:layout_height="100dp"
                            android:src="@drawable/respiration"
                            />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_respiration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Respiration"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

<!--                        <TextView-->
<!--                            android:id="@+id/progress_text_respiration"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Progress: 0%"-->
<!--                            android:textSize="14sp"-->
<!--                            android:layout_marginTop="6dp" />-->

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_learn_respiration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- === Copy and modify the above CardView for Reproduction and Anatomy === -->

            <!-- Reproduction -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:id="@+id/img_reproduction"
                            android:layout_width="100dp"
                            android:scaleType="centerCrop"
                            android:layout_height="100dp"
                            android:src="@drawable/reproduction"
                            />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_reproduction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reproduction"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

<!--                        <TextView-->
<!--                            android:id="@+id/progress_text_reproduction"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Progress: 0%"-->
<!--                            android:textSize="14sp"-->
<!--                            android:layout_marginTop="6dp" />-->

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_learn_reproduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Anatomy -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:id="@+id/img_anatomy"
                            android:layout_width="100dp"
                            android:scaleType="centerCrop"
                            android:layout_height="100dp"
                            android:src="@drawable/anatomy"
                            />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nutrition"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

<!--                        <TextView-->
<!--                            android:id="@+id/progress_text_"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Progress: 0%"-->
<!--                            android:textSize="14sp"-->
<!--                            android:layout_marginTop="6dp" />-->

                        </LinearLayout>
                        <Button
                            android:id="@+id/btn_learn_nutrition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Learn"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:backgroundTint="@android:color/holo_blue_light"
                            android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                app:cardElevation="4dp"
                android:layout_marginHorizontal="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="8dp">
                        <ImageView
                            android:id="@+id/img_anat"
                            android:layout_width="100dp"
                            android:scaleType="centerCrop"
                            android:layout_height="100dp"
                            android:src="@drawable/anat"
                            />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_anatomy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anotomy"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

<!--                        <TextView-->
<!--                            android:id="@+id/progress_text_anatomy"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="Progress: 0%"-->
<!--                            android:textSize="14sp"-->
<!--                            android:layout_marginTop="6dp" />-->

                    </LinearLayout>
                    <Button
                        android:id="@+id/btn_learn_anatomy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@android:color/holo_blue_light"
                        android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
