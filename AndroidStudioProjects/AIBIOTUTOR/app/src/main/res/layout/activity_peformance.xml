<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".peformance">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_analytics_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Performance Analytics"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Home Button -->
    <ImageView
        android:id="@+id/btn_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="352dp"
        android:contentDescription="Home"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Analytics Graph -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_performance_graph"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_analytics_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Graph View goes here (e.g., BarChart or LineChart) -->
        <!-- Replace with actual graph content -->
    </androidx.cardview.widget.CardView>

    <!-- AI Suggestions -->
    <TextView
        android:id="@+id/tv_ai_suggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Suggestions"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_performance_graph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
